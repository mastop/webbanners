{% extends '::backend.html.twig' %}
{% block content %}
    <div class="content box grid_12 round_all">
        <table class="display datatable"> 
            <thead> 
                <tr> 
                    <th>{{ "Título"|trans }}</th> 
                    <th class="last nowrap center">{{ "Ações"|trans }}</th> 
                </tr> 
            </thead> 
            <tbody> 
{% for discount in alldiscount %}
                <tr>
                    <td class="nowrap">{{ discount.name }}</td>
                    <td class="center nowrap">
                        <a class="button button-set-start small white" href="{{ path('admin_order_discount_form', {'id':discount.id}) }}"><span class="ui-silk ui-silk ui-silk-pencil">{{"Editar"|trans}}</a></span>
                        <a class="button button-set-finish small red" href="{{ path('admin_order_discount_delete', {'id':discount.id}) }}"><span class="ui-silk ui-silk-delete">{{"Deletar"|trans}}</span></a>
                    </td>
                </tr>
  {% else %}
                <tr><td colspan="5">{{ "Nenhuma pedido encontrado!"|trans }}</td></tr>
  {% endfor %} 
            <tbody>
        </table>
        <div class='clear'></div>
        <button onclick="window.location='{{path('admin_order_discount_form')}}'" title="{{ "Inserir nova página"|trans }}" class="button white newItem m10"><span class="ui-silk ui-silk-add"></span> {{ "Adicionar página"|trans }}</button>
    </div>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('themes/'~mastop_theme_name()~'/admin/js/DataTables/jquery.dataTables.js') }}"></script>
    <script type="text/javascript" src="{{ asset('themes/'~mastop_theme_name()~'/admin/js/adminica/adminica_datatables.js') }}"></script>
{% endblock %}